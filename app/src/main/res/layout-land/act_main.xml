<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="2dp" xmlns:android="http://schemas.android.com/apk/res/android" android:baselineAligned="false">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="3" android:background="@drawable/bkgndboard">

        <LinearLayout
            android:id="@+id/tblPlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bkgndboard"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp" />
        <TextView android:id="@+id/tvFinishInfo" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#A0D0D0D0" android:gravity="center" android:text="@string/gameOver" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#B00000" android:textSize="36sp" android:textStyle="italic"/>
	</FrameLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginStart="5dp" android:layout_weight="1" android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/lblNextNumber"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvNextNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkgndindicator"
            android:gravity="end"
            android:maxLines="1"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0f0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/lblTestTime"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkgndindicator"
            android:gravity="end"
            android:text="0:00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0f0" />

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_menu_home"
            android:text="@string/newGame" />

        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_refresh"
            android:text="@string/shuffle" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_help"
            android:text="@string/help" />
    </LinearLayout>    
</LinearLayout>
